{
    "manifest_version": 3,
    "name": "Text Summarizer",
    "version": "1.0",
    "permissions": [
        "contextMenus",
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/icon.png",
            "48": "img/icon.png",
            "128": "img/icon.png"
        }
    }
}